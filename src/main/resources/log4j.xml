	<appender name="default.file" class="org.apache.log4j.FileAppender">
		<param name="file" value="${catalina.home}/logs/chimeradefault.log" />
		<param name="append" value="false" />
		<param name="maxFileSize" value="100000KB" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss,SSS}:%p - %m%n" />
		</layout>
	</appender>
	<appender name="spring.file" class="org.apache.log4j.FileAppender">
		<param name="file" value="${catalina.home}/logs/chimeraspring.log" />
		<param name="append" value="false" />
		<param name="maxFileSize" value="100000KB" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss,SSS}:%p - %m%n" />
		</layout>
	</appender>
	<appender name="chimera.file" class="org.apache.log4j.FileAppender">
		<param name="file" value="${catalina.home}/logs/chimeramain.log" />
		<param name="append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss,SSS}:%p - %m%n" />
		</layout>
	</appender>

	<appender name="analytics.file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${catalina.home}/logs/analytics.log" />
		<param name="datePattern" value="'.'yyyy-MM-dd-HH-mm" />
		<param name="append" value="true" />
		
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n" />
		</layout>
	</appender>
	<appender name="analytics.async" class="org.apache.log4j.AsyncAppender">
		<param name="BufferSize" value="10000" />
		<param name="Blocking" value="true" />
		<appender-ref ref="analytics.file" />
	</appender>
	
	<logger name="co.chimeralabs.analytics.datareceiver.controller">
		<level value="info" />
		<appender-ref ref="analytics.async" />
	</logger>
	<logger name="co.chimeralabs">
		<level value="debug" />
		<appender-ref ref="chimera.file" />
	</logger>
	<logger name="org.springframework">
		<level value="debug" />
		<appender-ref ref="spring.file" />
	</logger>
	<root>
		<priority value="debug" />
		<appender-ref ref="default.file" />
	</root>
	
</log4j:configuration>